<div class="btn-group pull-right">
  <button class="btn dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
    <%= t ".tool" %><i class="fa fa-angle-down"></i>
  </button>
  <ul class="dropdown-menu pull-right">
    <li><a href="#"><%= t ".print" %></a></li>
    <li><a href="#"><%= t ".export_to_excel" %></a></li>
  </ul>
</div>

<% provide :title, t(".categories_title_name") %>
<h1><%= t ".categories" %></h1>

<div class="row heigh_table_with_button">
  <div class="col-md-4">
    <%= link_to t(".new_category_button"), "#",
      class: "btn btn-primary", data: {toggle: "modal", target: "#modal_create_cate"} %>
  </div>

  <div class="col-md-8">
    <%= form_tag admin_categories_path, method: :get do %>
      <div id="custom-search-input">
        <div class="input-group col-md-12">
          <%= text_field_tag :search, params[:search], class: "form-control",
            placeholder: t(".input_categories_name") %>
            <span class="input-group-btn">
              <%= submit_tag "Search", class: "btn btn-default" do %>
                <span class="glyphicon glyphicon-search"></span>
              <% end %>
            </span>
        </div>
      </div>
    <% end  %>
  </div>
</div>

<%= render "admin/categories/table_data" %>
<%= render "admin/categories/modal_create" %>

<div class="modal category-modal-edit">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="modal_edit_cate_label">
          <%= t ".update_cate_title" %>
        </h4>
      </div>
      <div class="modal-body-category-edit">

      </div>
    </div>
  </div>
</div>
