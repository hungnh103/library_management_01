<% provide :title, t(".categories_title_name") %>
<h1><%= t ".categories" %></h1>
<p><%= link_to t(".new_category"), "#", class: "btn btn-primary"  %></p>
<table class="table table-bordered">
  <thead>
    <tr>
      <th><%= t ".name" %></th>
      <th><%= t ".number_book" %></th>
      <th><%= t ".action" %></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td><%= category.books.size %></td>
      <td>
        <%= link_to "<i class='fa fa-eye'></i>".html_safe,
          "#", title: t(".show") %> |
        <%= link_to "<i class='fa fa-pencil'></i>".html_safe,
          "#", title: t(".edit") %> |
        <%= link_to "<i class='fa fa-trash'></i>".html_safe, "#",
        title: t(".delete"), method: :delete, data: {confirm: t(".are_you_sure")} %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @categories, theme: "twitter-bootstrap-3" %>
